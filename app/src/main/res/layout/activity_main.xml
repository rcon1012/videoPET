<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:width="400dp"
        android:height="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Sequence"
        android:id="@+id/new_sequence_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/select_sequence_button"
        android:layout_alignStart="@+id/select_sequence_button" />

    <Button
        android:width="400dp"
        android:height="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Sequence"
        android:id="@+id/select_sequence_button"
        android:layout_below="@+id/new_sequence_button"
        android:layout_centerHorizontal="true"
        android:onClick="toSelectSequence"/>

    <TextView
        android:textSize="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Galgonator"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

    <Button
        android:width="400dp"
        android:height="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Set-up"
        android:id="@+id/select_set-up"
        android:layout_below="@+id/select_sequence_button"
        android:layout_alignLeft="@+id/select_sequence_button"
        android:layout_alignStart="@+id/select_sequence_button" />
</RelativeLayout>
